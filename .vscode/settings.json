{
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[json]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "cSpell.words": [
    "AISDK",
    "Auths",
    "bigserial",
    "callees",
    "chartjs",
    "clsx",
    "cmdk",
    "fkey",
    "foxact",
    "healthcheck",
    "hookform",
    "hookz",
    "iconify",
    "immer",
    "jotai",
    "lucide",
    "Millis",
    "nolyfill",
    "nstr",
    "nums",
    "ofetch",
    "oklch",
    "onepassword",
    "openrouter",
    "opensubtitles",
    "overscroll",
    "Retime",
    "Retimer",
    "Retiming",
    "rolldown",
    "shadcn",
    "sonner",
    "Squircle",
    "stroustrup",
    "subvocab",
    "tanstack",
    "taze",
    "themoviedb",
    "tmdb",
    "toolbelt",
    "trycatch",
    "turbopack",
    "unplugin",
    "vaul",
    "vercel",
    "VITE",
    "ying",
    "zustand"
  ],
  // "i18n-ally.localesPaths": ["ui/src/i18n"],

  // Enable the ESlint flat config support
  "eslint.useFlatConfig": true,

  // Disable the default formatter, use eslint instead
  "prettier.enable": true, // HTML only; excludes !/**/*.html in .prettierignore
  "editor.formatOnSave": false,

  // Auto fix
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },

  // Silent the stylistic rules in you IDE, but still auto fix them
  "eslint.rules.customizations": [
    {
      "rule": "*",
      "severity": "warn"
    },
    { "rule": "style/*", "severity": "off" },
    { "rule": "format/*", "severity": "off" },
    { "rule": "*-indent", "severity": "off" },
    { "rule": "*-spacing", "severity": "off" },
    { "rule": "*-spaces", "severity": "off" },
    { "rule": "*-order", "severity": "off" },
    { "rule": "*-dangle", "severity": "off" },
    { "rule": "*-newline", "severity": "off" },
    { "rule": "*quotes", "severity": "off" },
    { "rule": "*semi", "severity": "off" }
  ],

  // Enable eslint for all supported languages
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact", "vue", "html", "markdown", "json", "jsonc", "yaml", "toml", "astro"],

  // https://github.com/tailwindlabs/tailwindcss/discussions/5258#discussioncomment-12273733
  "css.customData": [".vscode/tailwind.json"],
  "npm.exclude": ["**/.vercel/**"],
  "css.lint.validProperties": ["corner-shape"],
  "typescript.tsdk": "node_modules/typescript/lib"
}
