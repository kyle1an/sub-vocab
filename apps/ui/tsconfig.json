{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": [
      "unplugin-icons/types/react",
      "vite/client"
    ],
    "paths": {
      "@backend/*": ["./../backend/*"],
      "@/*": ["./*"]
    },
    "rootDirs": [
      ".",
      "./.react-router/types"
    ],
    "useDefineForClassFields": true,
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    "module": "ESNext",
    "noEmit": true,

    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "include": [
    ".react-router/types/**/*",
    ".eslintrc.js",
    ".eslintrc.cjs",
    "**/*.config.js",
    "**/*.config.cjs",
    "**/*.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "./vite/**/*",
    "vite.config.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
